#include <vector>
#include "acl/acl.h"
#include "kernel_operator.h"

constexpr int32_t ARRIVE_NUM = 2; // arriver num
constexpr int32_t WAIT_NUM = 6; // wait num
constexpr int32_t SIZE_NUM = 1; // tensor size
constexpr int32_t TEMP = ARRIVE_NUM * WAIT_NUM; // initial number

class KernelGroupBarrier {
public:
    __aicore__ inline KernelGroupBarrier() {}

    __aicore__ inline void Init(GM_ADDR barGm, GM_ADDR dstGm, AscendC::TPipe *pipeIn)
    {
        pipe = pipeIn;
        this->barWorkspace = barGm;
        uint32_t oneBlockNum = 32 / sizeof(int32_t);
        this->totalLength = (SIZE_NUM + oneBlockNum - 1) / oneBlockNum * oneBlockNum;
        dstGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ int32_t *>(dstGm), totalLength);
        pipe->InitBuffer(inQueue, 1, totalLength * sizeof(int32_t));
    }

    __aicore__ inline void Process()
    {
        // apply GroupBarrier
        AscendC::GroupBarrier<AscendC::PipeMode::MTE3_MODE> barA(barWorkspace, ARRIVE_NUM, WAIT_NUM);
        AscendC::InitOutput<int32_t>(dstGlobal, totalLength, 0); // init output zero
        AscendC::SyncAll();
        auto id = AscendC::GetBlockIdx();
        if (id >= 0 && id < ARRIVE_NUM) // arrive realize
        {
            AscendC::LocalTensor<int32_t> srcLocal = inQueue.AllocTensor<int32_t> ();
            AscendC::DisableDmaAtomic();
            srcLocal.SetValue(0, TEMP); // set initial number
            AscendC::SetAtomicAdd<int32_t>(); // add initial number
            AscendC::DataCopy(dstGlobal, srcLocal, totalLength);
            AscendC::DisableDmaAtomic();
            inQueue.FreeTensor(srcLocal);
            barA.Arrive(id); //arrive end
        }
        else if (id >= ARRIVE_NUM && id < ARRIVE_NUM + WAIT_NUM)  // wait realize
        {
            barA.Wait(id - ARRIVE_NUM); // wait end
            int32_t val = dstGlobal.GetValue(0);
            AscendC::printf("[Block (%lu/%lu)]: OUTPUT = %d\n", id - ARRIVE_NUM, WAIT_NUM, val);
        }
    }

private:
    AscendC::TPipe* pipe;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueue;
    AscendC::GlobalTensor<int32_t> dstGlobal;
    uint32_t totalLength;
    GM_ADDR barWorkspace;
};

extern "C" __global__ __vector__ void kernel_group_barrier(GM_ADDR barGm, GM_ADDR dstGm)
{
    AscendC::TPipe pipe;
    KernelGroupBarrier op;
    op.Init(barGm, dstGm, &pipe);
    op.Process();
}

std::vector<uint8_t> GenGoldenData(size_t xShape)
{
    std::vector<uint8_t> bar(xShape, 0);
    return bar;
}

int32_t main(int32_t argc, char* argv[])
{
    uint32_t numBlocks = 8;
    size_t barByteSize = WAIT_NUM * 512;
    size_t outputByteSize = 8 * sizeof(int32_t);

    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    auto bar = GenGoldenData(barByteSize);

    uint8_t *xHost = bar.data(), *zHost;
    uint8_t *xDevice, *zDevice;

    aclrtMallocHost((void **)(&zHost), outputByteSize);
    aclrtMalloc((void **)&xDevice, barByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void **)&zDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);

    aclrtMemcpy(xDevice, barByteSize, xHost, barByteSize,
                ACL_MEMCPY_HOST_TO_DEVICE);

    kernel_group_barrier<<<numBlocks, nullptr, stream>>>(xDevice, zDevice);
    aclrtSynchronizeStream(stream);

    aclrtMemcpy(zHost, outputByteSize, zDevice, outputByteSize,
                ACL_MEMCPY_DEVICE_TO_HOST);

    aclrtFree(xDevice);
    aclrtFree(zDevice);
    aclrtFreeHost(xHost);
    aclrtFreeHost(zHost);

    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();

    return 0;
}

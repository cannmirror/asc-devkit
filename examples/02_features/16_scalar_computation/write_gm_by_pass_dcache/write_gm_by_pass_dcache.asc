#include <vector>
#include <cstdio>
#include <cmath>
#include "acl/acl.h"
#include "kernel_operator.h"

template <typename T>
class KernelWriteGmByPassDcache {
public:
    __aicore__ inline KernelWriteGmByPassDcache() {}

    __aicore__ inline void Init() {}

    __aicore__ inline void Process(GM_ADDR dstGm)
    {
        __gm__ T *addr = reinterpret_cast<__gm__ T *>(dstGm);
        T value = 2;
        AscendC::WriteGmByPassDCache<T>(addr, value);
    }
};

extern "C" __global__ __aicore__ void kernel_write_gm_by_pass_dcache(GM_ADDR dstGm)
{
    KernelWriteGmByPassDcache<int32_t> op;
    op.Init();
    op.Process(dstGm);
}

static bool CompareResult(const void* output, const void* golden, uint32_t outSize)
{
    constexpr float EPS = 1e-4;
    int64_t wrongNum = 0;
    for(size_t i = 0; i < outSize / sizeof(int32_t); i++) {
        int32_t a = reinterpret_cast<const int32_t*>(output)[0];
        int32_t b = reinterpret_cast<const int32_t*>(golden)[0];
        float ae = std::abs(a - b);
        float re = ae / std::abs(b);
        if(ae > EPS && re >EPS) {
            printf("CompareResult failed output is %d, golden is %d\n", a, b);
            wrongNum++;
        }
    }
    return wrongNum == 0;
}

int32_t main(int32_t argc, char* argv[]) 
{
    uint32_t numBlocks = 1;
    size_t outputByteSize = 1024 * sizeof(int32_t);
    int32_t golden = 2;

    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    uint8_t *zHost;
    uint8_t *zDevice;

    aclrtMallocHost((void **)(&zHost), outputByteSize);
    aclrtMalloc((void **)&zDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);

    kernel_write_gm_by_pass_dcache<<<numBlocks, nullptr, stream>>>(zDevice);
    aclrtSynchronizeStream(stream);

    aclrtMemcpy(zHost, outputByteSize, zDevice, outputByteSize,
                ACL_MEMCPY_DEVICE_TO_HOST);
    
    bool precisePass = false;
    precisePass = CompareResult(zHost, &golden, sizeof(int32_t));
    if(precisePass) {
        printf("test pass!\n");
    } else {
        printf("test failed!\n");
    }

    aclrtFree(zDevice);
    aclrtFreeHost(zHost);

    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();

    return 0;
}

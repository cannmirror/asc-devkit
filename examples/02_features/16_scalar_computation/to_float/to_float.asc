#include "acl/acl.h"
#include "data_utils.h"
#include "kernel_operator.h"

template <typename T>
class KernelToFloat {
public:
    __aicore__ inline KernelToFloat() {}

    __aicore__ inline void Init(GM_ADDR srcGm, GM_ADDR dstGm, AscendC::TPipe* pipeIn, uint32_t calCount)
    {
        pipe = pipeIn;
        bufferSize = calCount;

        srcGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ T *>(srcGm), bufferSize);
        dstGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ float *>(dstGm), bufferSize);

        pipe->InitBuffer(inQueue, 1, bufferSize * sizeof(T));
        pipe->InitBuffer(outQueue, 1, bufferSize * sizeof(float));
    }

    __aicore__ inline void Process()
    {
        CopyIn();
        Compute();
        CopyOut();
    }

private:
    __aicore__ inline void CopyIn()
    {
        AscendC::LocalTensor<T> srcLocal = inQueue.AllocTensor<T>();
        AscendC::DataCopy(srcLocal, srcGlobal, bufferSize);
        inQueue.EnQue(srcLocal);
    }

    __aicore__ inline void Compute()
    {
        AscendC::LocalTensor<T> srcLocal = inQueue.DeQue<T>();
        AscendC::LocalTensor<float> dstLocal = outQueue.AllocTensor<float>();

        int32_t eventIDMTEToS = static_cast<int32_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::MTE2_S));
        AscendC::SetFlag<AscendC::HardEvent::MTE2_S>(eventIDMTEToS);
        AscendC::WaitFlag<AscendC::HardEvent::MTE2_S>(eventIDMTEToS);
        float fValue = AscendC::ToFloat(srcLocal.GetValue(0));
        
        int32_t eventIDSToV = static_cast<int32_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::S_V));
        AscendC::SetFlag<AscendC::HardEvent::S_V>(eventIDSToV);
        AscendC::WaitFlag<AscendC::HardEvent::S_V>(eventIDSToV);
        AscendC::Duplicate(dstLocal, fValue, bufferSize);
        
        outQueue.EnQue<float>(dstLocal);
        inQueue.FreeTensor(srcLocal);
    }

    __aicore__ inline void CopyOut()
    {
        AscendC::LocalTensor<float> dstLocal = outQueue.DeQue<float>();
        AscendC::DataCopy(dstGlobal, dstLocal, bufferSize);
        outQueue.FreeTensor(dstLocal);
    }

private:
    AscendC::GlobalTensor<float> dstGlobal;
    AscendC::GlobalTensor<T> srcGlobal;

    AscendC::TPipe* pipe;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueue;
    AscendC::TQue<AscendC::TPosition::VECOUT, 1> outQueue;
    uint32_t bufferSize = 0;
};

__global__ __vector__ void kernel_to_float(GM_ADDR x, GM_ADDR z) 
{
    uint32_t calCount = 1024;
    AscendC::TPipe pipe;
    KernelToFloat<bfloat16_t> op;
    op.Init(x, z, &pipe, calCount);
    op.Process();
}

int32_t main(int32_t argc, char *argv[]) 
{
    uint32_t blockDim = 1;
    size_t inputByteSize = 1024 * sizeof(bfloat16_t);
    size_t outputByteSize = 1024 * sizeof(float);

    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    uint8_t *xHost, *zHost;
    uint8_t *xDevice, *zDevice;

    aclrtMallocHost((void **)(&xHost), inputByteSize);
    aclrtMallocHost((void **)(&zHost), outputByteSize);
    aclrtMalloc((void **)&xDevice, inputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void **)&zDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);

    ReadFile("./input/input_x.bin", inputByteSize, xHost, inputByteSize);

    aclrtMemcpy(xDevice, inputByteSize, xHost, inputByteSize,
                ACL_MEMCPY_HOST_TO_DEVICE);

    kernel_to_float<<<blockDim, nullptr, stream>>>(xDevice, zDevice);
    aclrtSynchronizeStream(stream);

    aclrtMemcpy(zHost, outputByteSize, zDevice, outputByteSize,
                ACL_MEMCPY_DEVICE_TO_HOST);
    WriteFile("./output/output.bin", zHost, outputByteSize);

    aclrtFree(xDevice);
    aclrtFree(zDevice);
    aclrtFreeHost(xHost);
    aclrtFreeHost(zHost);

    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();

    return 0;
}

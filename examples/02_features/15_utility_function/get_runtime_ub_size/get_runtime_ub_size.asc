#include <random>
#include "acl/acl.h"
#include "kernel_operator.h"


class KernelGetRuntimeUBSize {
public:
  __aicore__ inline KernelGetRuntimeUBSize() {}

  __aicore__ inline void Init(GM_ADDR srcGm, GM_ADDR dstGm, AscendC::TPipe* pipeIn, uint32_t totalLength) 
  {
    pipe = pipeIn;
    srcGlobal.SetGlobalBuffer((__gm__ half *)srcGm);
    dstGlobal.SetGlobalBuffer((__gm__ half *)dstGm);
    tileLength = AscendC::GetRuntimeUBSize() / sizeof(half) / 2;
    tileNum = totalLength / tileLength;
    pipe->InitBuffer(inQueue, 1, tileLength * sizeof(half));
    pipe->InitBuffer(outQueue, 1, tileLength * sizeof(half));
  }

  __aicore__ inline void Process() 
  {
    for (int32_t i = 0; i < tileNum; i++) {
      CopyIn(i);
      Compute(i);
      CopyOut(i);
    }
  }

private:
  __aicore__ inline void CopyIn(int32_t progress) 
  {
    AscendC::LocalTensor<half> srcLocal = inQueue.AllocTensor<half>();
    AscendC::DataCopy(srcLocal, srcGlobal[progress * tileLength], tileLength);
    inQueue.EnQue(srcLocal);
  }

  __aicore__ inline void Compute(int32_t progress) 
  {
    AscendC::LocalTensor<half> srcLocal = inQueue.DeQue<half>();
    AscendC::LocalTensor<half> dstLocal = outQueue.AllocTensor<half>();
    AscendC::Abs(dstLocal, srcLocal, tileLength);
    outQueue.EnQue<half>(dstLocal);
    inQueue.FreeTensor(srcLocal);
  }

  __aicore__ inline void CopyOut(int32_t progress) 
  {
    AscendC::LocalTensor<half> dstLocal = outQueue.DeQue<half>();
    AscendC::DataCopy(dstGlobal[progress * tileLength], dstLocal, tileLength);
    outQueue.FreeTensor(dstLocal);
  }

private:
  AscendC::TPipe* pipe;
  AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueue;
  AscendC::TQue<AscendC::TPosition::VECOUT, 1> outQueue;
  AscendC::GlobalTensor<half> srcGlobal;
  AscendC::GlobalTensor<half> dstGlobal;
  uint32_t tileNum;
  uint32_t tileLength;
};

__global__ __aicore__ void kernel_get_runtime_ub_size(GM_ADDR x, GM_ADDR z) 
{
  AscendC::TPipe pipe;
  KernelGetRuntimeUBSize op;
  uint32_t totalLength = 126976;
  op.Init(x, z, &pipe, totalLength);
  op.Process();
}

struct GoldenData {
    std::vector<half> src;
    std::vector<half> golden;
};

GoldenData GenGoldenData(size_t srcSize, size_t goldenSize)
{
    std::random_device rd;
    std::mt19937 gen(rd());
    std::uniform_real_distribution<float> dis(-1000.0f, 1000.0f);
    std::vector<half> src(srcSize);
    for(size_t i = 0; i < srcSize; ++i) {
        src[i] = static_cast<half>(dis(gen));
    }
    std::vector<half> golden(goldenSize);
    for(size_t i = 0; i < goldenSize; ++i) {
        golden[i] = static_cast<half>(std::fabs(static_cast<float>(src[i])));
    }
    return {src, golden};
}

static bool CompareResult(const void* output, const void* golden, uint32_t outSize)
{
    constexpr float EPS = 1e-4;
    int64_t wrongNum = 0;
    for (size_t i = 0; i < outSize / sizeof(half); ++i) {
        half a = reinterpret_cast<const half *>(output)[i];
        half b = reinterpret_cast<const half *>(golden)[i];
        float ae = std::abs(static_cast<float>(a - b));
        float re = ae / std::abs(static_cast<float>(b));
        if (ae > EPS && re > EPS) {
            printf("CompareResult failed output is %lf, golden is %lf\n", a, b);
            wrongNum++;
        }
    }
    return wrongNum == 0;
}

int32_t main(int32_t argc, char* argv[]) 
{
  uint32_t numBlocks = 1;
  size_t inputByteSize = 126976 * sizeof(half);
  size_t outputByteSize = 126976 * sizeof(half);

  GoldenData data = GenGoldenData(126976, 126976);
  auto src = data.src;
  auto golden = data.golden;
  uint8_t* goldenHost = reinterpret_cast<uint8_t *>(golden.data());

  int32_t deviceId = 0;
  aclrtSetDevice(deviceId);
  aclrtStream stream = nullptr;
  aclrtCreateStream(&stream);

  uint8_t *xHost = reinterpret_cast<uint8_t *>(src.data()), *outHost;
  uint8_t *xDevice, *outDevice;

  aclrtMallocHost((void **)(&outHost), outputByteSize);
  aclrtMalloc((void **)&xDevice, inputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
  aclrtMalloc((void **)&outDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);

  aclrtMemcpy(xDevice, inputByteSize, xHost, inputByteSize,
              ACL_MEMCPY_HOST_TO_DEVICE);
  kernel_get_runtime_ub_size<<<numBlocks, nullptr, stream>>>(xDevice, outDevice);
  aclrtSynchronizeStream(stream);

  aclrtMemcpy(outHost, outputByteSize, outDevice, outputByteSize,
              ACL_MEMCPY_DEVICE_TO_HOST);
  
  bool testPassed = false;
  testPassed = CompareResult(outHost, goldenHost, outputByteSize);
  if(testPassed) {
      printf("test pass!\n");
  } else {
      printf("test failed!\n");
  }

  aclrtFree(xDevice);
  aclrtFree(outDevice);
  aclrtFreeHost(xHost);
  aclrtFreeHost(outHost);
  aclrtFreeHost(goldenHost);

  aclrtDestroyStream(stream);
  aclrtResetDevice(deviceId);
  aclFinalize();

  return 0;
}

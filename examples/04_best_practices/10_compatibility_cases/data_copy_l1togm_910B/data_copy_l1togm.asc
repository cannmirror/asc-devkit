#include "acl/acl.h"
#include "kernel_operator.h"
#include "data_utils.h"

template <typename T>
class Kernel {
public:
    __aicore__ inline Kernel(uint32_t m, uint32_t n, uint32_t k)
    {
        this->m = m;
        this->n = n;
        this->k = k;
    }
    __aicore__ inline void Init(GM_ADDR aGm, GM_ADDR cGm, AscendC::TPipe* pipeIn)
    {
        KERNEL_TASK_TYPE_DEFAULT(KERNEL_TYPE_AIC_ONLY);
        aGlobal.SetGlobalBuffer((__gm__ T*)aGm);
        cGlobal.SetGlobalBuffer((__gm__ T*)cGm);
        pipe = pipeIn;
        pipe->InitBuffer(inQueueA1, 1, m * k * sizeof(T));
    }

    // gm -> A1
    __aicore__ inline void CopyGmToA1()
    {
        AscendC::LocalTensor<T> leftMatrix = inQueueA1.AllocTensor<T>();
        AscendC::DataCopy(leftMatrix, aGlobal, m * k);
        inQueueA1.EnQue(leftMatrix);
    }

    __aicore__ inline void CopyL1ToGm()
    {
        AscendC::LocalTensor<T> leftMatrix = inQueueA1.DeQue<T>();
        AscendC::DataCopy(cGlobal, leftMatrix, m * k);
    }

    __aicore__ inline void IterateAll()
    {
        CopyGmToA1();
        AscendC::SetFlag<AscendC::HardEvent::MTE2_MTE3>(EVENT_ID0);
        AscendC::WaitFlag<AscendC::HardEvent::MTE2_MTE3>(EVENT_ID0);
        CopyL1ToGm();
    }

private:
    AscendC::TPipe* pipe;
    uint32_t m = 0;
    uint32_t n = 0;
    uint32_t k = 0;
    AscendC::TQue<AscendC::TPosition::A1, 1, 1> inQueueA1;
    AscendC::GlobalTensor<T> aGlobal;
    AscendC::GlobalTensor<T> cGlobal;
};

__global__ __aicore__ void data_copy_l1togm(GM_ADDR x, GM_ADDR y, int32_t m, int32_t n, int32_t k)
{
    Kernel<half> op(m, n, k);
    AscendC::TPipe pipe;
    op.Init(x, y, &pipe);
    op.IterateAll();
}

int32_t main(int32_t argc, char* argv[])
{
    uint32_t blockDim = 1;
    aclInit(nullptr);
    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);
    int32_t m = 64, n = 128, k = 128;
    size_t aInputByteSize = static_cast<size_t>(1) * m * k * sizeof(half);
    size_t outputByteSize = static_cast<size_t>(1) * m * k * sizeof(half);
    uint8_t *xHost, *zHost;
    uint8_t *xDevice, *zDevice;
    aclrtMallocHost((void**)(&xHost), aInputByteSize);
    aclrtMallocHost((void**)(&zHost), outputByteSize);
    aclrtMalloc((void**)&xDevice, aInputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void**)&zDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    ReadFile("./input/input_x.bin", aInputByteSize, xHost, aInputByteSize);
    aclrtMemcpy(xDevice, aInputByteSize, xHost, aInputByteSize, ACL_MEMCPY_HOST_TO_DEVICE);
    data_copy_l1togm<<<blockDim, nullptr, stream>>>(xDevice, zDevice, m, n, k);
    aclrtSynchronizeStream(stream);
    aclrtMemcpy(zHost, outputByteSize, zDevice, outputByteSize, ACL_MEMCPY_DEVICE_TO_HOST);
    WriteFile("./output/output.bin", zHost, outputByteSize);
    aclrtFree(xDevice);
    aclrtFree(zDevice);
    aclrtFreeHost(xHost);
    aclrtFreeHost(zHost);
    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();
    return 0;
}
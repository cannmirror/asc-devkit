#include "acl/acl.h"
#include "kernel_operator.h"
#include "data_utils.h"

template <typename T>
__simd_vf__ inline void DivVF(__ubuf__ T* dstAddr, __ubuf__ T* srcAddr, uint16_t oneRepeatSize, uint32_t repeatTimes,
                              uint32_t count)
{
    AscendC::MicroAPI::MaskReg mask;
    AscendC::MicroAPI::RegTensor<T> srcReg0, srcReg1, dstReg;
    constexpr float num = 1.0f;
    for (uint16_t i = 0; i < repeatTimes; ++i) {
        mask = AscendC::MicroAPI::UpdateMask<T>(count);
        AscendC::MicroAPI::LoadAlign(srcReg0, srcAddr + i * oneRepeatSize);
        AscendC::MicroAPI::Duplicate(srcReg1, num, mask);
        AscendC::MicroAPI::Div(dstReg, srcReg1, srcReg0, mask);
        AscendC::MicroAPI::StoreAlign(dstAddr + i * oneRepeatSize, dstReg, mask);
    }
}

template <typename T>
__simd_vf__ inline void AddVF(__ubuf__ T* dstAddr, __ubuf__ T* srcAddr, uint16_t oneRepeatSize, uint32_t repeatTimes,
                              uint32_t count)
{
    AscendC::MicroAPI::MaskReg mask;
    AscendC::MicroAPI::RegTensor<T> srcReg, dstReg;
    constexpr float num = 1.0f;
    for (uint16_t i = 0; i < repeatTimes; ++i) {
        mask = AscendC::MicroAPI::UpdateMask<T>(count);
        AscendC::MicroAPI::LoadAlign(srcReg, srcAddr + i * oneRepeatSize);
        AscendC::MicroAPI::Adds(dstReg, srcReg, num, mask);
        AscendC::MicroAPI::StoreAlign(dstAddr + i * oneRepeatSize, dstReg, mask);
    }
}

template <typename T>
class Kernel {
public:
    __aicore__ inline void Init(GM_ADDR x, GM_ADDR y, uint32_t count, AscendC::TPipe* pipeIn)
    {
        this->pipe = pipeIn;
        this->count = count;
        this->xGm.SetGlobalBuffer(reinterpret_cast<__gm__ T*>(x));
        this->yGm.SetGlobalBuffer(reinterpret_cast<__gm__ T*>(y));
        this->pipe->InitBuffer(inQueueX, 1, sizeof(T) * count);
        this->pipe->InitBuffer(outQueueY, 1, sizeof(T) * count);
    }
    __aicore__ inline void CopyIn()
    {
        AscendC::LocalTensor<T> xLocal = inQueueX.AllocTensor<T>();
        AscendC::Duplicate<T>(xLocal, 0, count);
        AscendC::DataCopy(xLocal, xGm, count);
        inQueueX.EnQue<T>(xLocal);
    }
    __aicore__ inline void Compute()
    {
        AscendC::LocalTensor<T> xLocal = inQueueX.DeQue<T>();
        AscendC::LocalTensor<T> yLocal = outQueueY.AllocTensor<T>();
        __ubuf__ T* srcAddr = reinterpret_cast<__ubuf__ T*>(xLocal.GetPhyAddr());
        __ubuf__ T* dstAddr = reinterpret_cast<__ubuf__ T*>(yLocal.GetPhyAddr());
        constexpr uint32_t oneRepeatSize = AscendC::GetVecLen() / sizeof(T);
        uint16_t repeatTimes = AscendC::CeilDivision(count, oneRepeatSize);
        AscendC::VF_CALL<DivVF<T>>(dstAddr, srcAddr, oneRepeatSize, repeatTimes, count);
        AscendC::VF_CALL<AddVF<T>>(dstAddr, srcAddr, oneRepeatSize, repeatTimes, count);
        outQueueY.EnQue<T>(yLocal);
    }
    __aicore__ inline void CopyOut()
    {
        AscendC::LocalTensor<T> yLocal = outQueueY.DeQue<T>();
        AscendC::DataCopy(yGm, yLocal, count);
    }
    __aicore__ inline void Process()
    {
        CopyIn();
        Compute();
        CopyOut();
    }

private:
    AscendC::TPipe* pipe = nullptr;
    uint32_t count;
    AscendC::GlobalTensor<T> xGm;
    AscendC::GlobalTensor<T> yGm;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueueX;
    AscendC::TQue<AscendC::TPosition::VECOUT, 1> outQueueY;
};

__global__ __vector__ void optimize_vf_fusion(GM_ADDR x, GM_ADDR y)
{
    AscendC::TPipe pipe;
    Kernel<float> kernel;
    kernel.Init(x, y, 1024, &pipe);
    kernel.Process();
}

static bool CompareResult(const void* outputData, uint32_t outSize)
{
    void* goldenData;
    aclrtMallocHost((void**)(&goldenData), outSize);
    size_t goldenSize = outSize;
    bool ret = ReadFile("./output/golden.bin", goldenSize, goldenData, goldenSize);
    if (ret) {
        printf("ReadFile golden.bin success!\n");
    } else {
        printf("test failed!\n");
        return false;
    }
    constexpr float EPS = 1e-4;
    int64_t wrongNum = 0;

    for (size_t i = 0; i < outSize / sizeof(float); i++) {
        float a = (reinterpret_cast<const float*>(outputData))[i];
        float b = (reinterpret_cast<const float*>(goldenData))[i];
        float ae = std::abs(a - b);
        float re = ae / std::abs(b);
        if (ae > EPS && re > EPS) {
            printf("CompareResult golden.bin failed output is %lf, golden is %lf\n", a, b);
            wrongNum++;
        }
    }
    aclrtFreeHost(goldenData);
    if (wrongNum != 0) {
        return false;
    } else {
        printf("CompareResult golden.bin success!\n");
        return true;
    }
}

int32_t main(int32_t argc, char* argv[])
{
    uint32_t numBlocks = 1;
    aclInit(nullptr);
    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);
    size_t aInputByteSize = static_cast<size_t>(1) * 1024 * sizeof(float);
    size_t outputByteSize = static_cast<size_t>(1) * 1024 * sizeof(float);
    uint8_t *xHost, *yHost;
    uint8_t *xDevice, *yDevice;
    aclrtMallocHost((void**)(&xHost), aInputByteSize);
    aclrtMallocHost((void**)(&yHost), outputByteSize);
    aclrtMalloc((void**)&xDevice, aInputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void**)&yDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    ReadFile("./input/input.bin", aInputByteSize, xHost, aInputByteSize);
    aclrtMemcpy(xDevice, aInputByteSize, xHost, aInputByteSize, ACL_MEMCPY_HOST_TO_DEVICE);
    optimize_vf_fusion<<<numBlocks, nullptr, stream>>>(xDevice, yDevice);
    aclrtSynchronizeStream(stream);
    aclrtMemcpy(yHost, outputByteSize, yDevice, outputByteSize, ACL_MEMCPY_DEVICE_TO_HOST);
    WriteFile("./output/output.bin", yHost, outputByteSize);
    bool goldenResult = true;
    goldenResult = CompareResult(yHost, outputByteSize);
    if (goldenResult) {
        printf("test pass!\n");
    } else {
        printf("test failed!\n");
    }
    aclrtFree(xDevice);
    aclrtFree(yDevice);
    aclrtFreeHost(xHost);
    aclrtFreeHost(yHost);
    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();
    return 0;
}
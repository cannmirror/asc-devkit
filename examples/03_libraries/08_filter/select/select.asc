void ComputeTiling(const uint32_t firstAxis, const uint32_t srcSize, const uint32_t maskSize,
                   optiling::SelectCustomTilingData& tiling)
{
    std::vector<int64_t> shape0Vec = {firstAxis, srcSize};
    std::vector<int64_t> shape1Vec = {1};
    std::vector<int64_t> mask1Vec = {firstAxis, maskSize};
    ge::Shape src0Shape(shape0Vec);
    ge::Shape src1Shape(shape1Vec);
    ge::Shape maskShape(mask1Vec);
    uint32_t maxValue = 0;
    uint32_t minValue = 0;
    uint32_t srcTypeSize = sizeof(float);
    AscendC::GetSelectMaxMinTmpSize(src0Shape, src1Shape, srcTypeSize, maskShape, 1, false, maxValue, minValue);
    uint32_t sharedTmpBufferSize = minValue;
    tiling.set_scalarValue(1.234f);
    tiling.set_firstAxis(firstAxis);
    tiling.set_srcSize(srcSize);
    tiling.set_maskSize(maskSize);
    tiling.set_sharedTmpBufferSize(sharedTmpBufferSize);
}

uint8_t* GetTilingBuf(optiling::SelectCustomTilingData* tilingData)
{
    uint32_t tilingSize = sizeof(optiling::SelectCustomTilingData);
    uint8_t* buf = (uint8_t*)malloc(tilingSize);
    tilingData->SaveToBuffer(buf, tilingSize);
    return buf;
}

uint8_t* GenerateTiling(uint32_t firstAxis, uint32_t srcSize, uint32_t maskSize)
{
    optiling::SelectCustomTilingData tiling;
    ComputeTiling(firstAxis, srcSize, maskSize, tiling);
    return GetTilingBuf(&tiling);
}

namespace MyCustomKernel {
struct VecTiling {
    float scalarValue;
    uint32_t firstAxis;
    uint32_t srcSize;
    uint32_t maskSize;
    uint32_t sharedTmpBufferSize;
};

template <typename srcType, typename maskType>
class KernelSelect {
public:
    __aicore__ inline KernelSelect() {}
    __aicore__ inline void Init(GM_ADDR srcGm, GM_ADDR maskGm, GM_ADDR dstGm, float scalarValue, uint32_t firstAxis,
                                uint32_t srcAxis, uint32_t maskAxis, uint32_t tmpSize, AscendC::TPipe* pipeIn)
    {
        pipe = pipeIn;
        uint32_t srcSize = firstAxis * srcAxis;
        uint32_t maskSize = firstAxis * maskAxis;
        srcGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ srcType*>(srcGm), srcSize);
        mask_global.SetGlobalBuffer(reinterpret_cast<__gm__ maskType*>(maskGm), maskSize);
        dstGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ srcType*>(dstGm), srcSize);
        pipe->InitBuffer(inQueueX, 1, srcSize * sizeof(srcType));
        pipe->InitBuffer(outQueue, 1, srcSize * sizeof(srcType));
        pipe->InitBuffer(maskQueue, 1, maskSize * sizeof(maskType));
        pipe->InitBuffer(sharedTmpBuffer, tmpSize);
        bufferSize = srcSize;
        scalar = static_cast<srcType>(scalarValue);
        maskBufferSize = maskSize;
        info.firstAxis = firstAxis;
        info.srcLastAxis = srcAxis;
        info.maskLastAxis = maskAxis;
    }
    __aicore__ inline void Process()
    {
        CopyIn();
        Compute();
        CopyOut();
    }

private:
    __aicore__ inline void CopyIn()
    {
        srcLocal = inQueueX.AllocTensor<srcType>();
        AscendC::DataCopy(srcLocal, srcGlobal, bufferSize);
        inQueueX.EnQue(srcLocal);
        maskLocal = maskQueue.AllocTensor<maskType>();
        AscendC::DataCopy(maskLocal, mask_global, maskBufferSize);
        maskQueue.EnQue(maskLocal);
    }
    __aicore__ inline void Compute()
    {
        srcLocal = inQueueX.DeQue<srcType>();
        maskLocal = maskQueue.DeQue<maskType>();
        AscendC::LocalTensor<uint8_t> tmpBuffer = sharedTmpBuffer.Get<uint8_t>();
        dstLocal = outQueue.AllocTensor<srcType>();

        AscendC::Select(dstLocal, srcLocal, scalar, maskLocal, tmpBuffer, info);
        // Reverse Select.
        // AscendC::Select(dstLocal, scalar, srcLocal, maskLocal, tmpBuffer, info);
        outQueue.EnQue<srcType>(dstLocal);
        maskQueue.FreeTensor(maskLocal);
        inQueueX.FreeTensor(srcLocal);
    }
    __aicore__ inline void CopyOut()
    {
        dstLocal = outQueue.DeQue<srcType>();
        AscendC::DataCopy(dstGlobal, dstLocal, bufferSize);
        outQueue.FreeTensor(dstLocal);
    }

private:
    AscendC::GlobalTensor<srcType> srcGlobal;
    AscendC::GlobalTensor<srcType> dstGlobal;
    AscendC::GlobalTensor<maskType> mask_global;
    AscendC::TPipe* pipe;
    AscendC::TBuf<AscendC::TPosition::VECCALC> sharedTmpBuffer;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueueX;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> maskQueue;
    AscendC::TQue<AscendC::TPosition::VECOUT, 1> outQueue;
    AscendC::SelectWithBytesMaskShapeInfo info;
    AscendC::LocalTensor<srcType> srcLocal;
    AscendC::LocalTensor<srcType> dstLocal;
    AscendC::LocalTensor<maskType> maskLocal;
    uint32_t bufferSize = 0;
    uint32_t maskBufferSize = 0;
    srcType scalar = 0.0f;
};
} // namespace MyCustomKernel

__aicore__ inline void CopyTiling(MyCustomKernel::VecTiling* tiling, GM_ADDR tilingGM)
{
    uint32_t* ptr = reinterpret_cast<uint32_t*>(tiling);
    auto tiling32 = reinterpret_cast<__gm__ uint32_t*>(tilingGM);

    for (uint32_t i = 0; i < sizeof(MyCustomKernel::VecTiling) / sizeof(uint32_t); i++, ptr++) {
        *ptr = *(tiling32 + i);
    }
    return;
}

extern "C" __global__ __vector__ void select_with_bytes_mask_custom(GM_ADDR srcGm, GM_ADDR maskGm, GM_ADDR dstGm,
                                                                    GM_ADDR workspace, GM_ADDR tiling)
{
    AscendC::TPipe pipe;
    MyCustomKernel::VecTiling tilingData;
    CopyTiling(&tilingData, tiling);
    MyCustomKernel::KernelSelect<float, bool> op;
    op.Init(srcGm, maskGm, dstGm, tilingData.scalarValue, tilingData.firstAxis, tilingData.srcSize, tilingData.maskSize,
            tilingData.sharedTmpBufferSize, &pipe);
    op.Process();
}

constexpr uint32_t NUM_BLOCKS = 1;
constexpr uint32_t FIRSTAXIS = 2;
constexpr uint32_t SRCLASTAXIS = 32;
constexpr uint32_t MASKLASTAXIS = 32;
constexpr uint32_t TILINGDATA_SIZE = 5;
constexpr uint32_t WORKSPACE_SIZE = 1024;

static bool CompareResult(const void* outputData, int64_t outSize)
{
    void* goldenData;
    aclrtMallocHost((void**)(&goldenData), outSize);
    size_t goldenSize = outSize;
    bool ret = ReadFile("./output/golden.bin", goldenSize, goldenData, goldenSize);
    if (ret) {
        printf("ReadFile golden.bin success!\n");
    } else {
        printf("test failed!\n");
        return false;
    }
    constexpr float EPS = 1e-5;
    int64_t wrongNum = 0;

    for (int i = 0; i < outSize / sizeof(float); i++) {
        float a = (reinterpret_cast<const float*>(outputData))[i];
        float b = (reinterpret_cast<const float*>(goldenData))[i];
        float ae = std::abs(a - b);
        float re = ae / std::abs(b);
        if (ae > EPS && re > EPS) {
            printf("CompareResult golden.bin failed. Output[%d] is %lf, golden is %lf\n", i, a, b);
            wrongNum++;
        }
    }
    aclrtFreeHost(goldenData);
    if (wrongNum != 0) {
        return false;
    } else {
        printf("CompareResult golden.bin success!\n");
        return true;
    }
}

int32_t main(int32_t argc, char* argv[])
{
    uint32_t numBlocks = NUM_BLOCKS;
    size_t srcSize = FIRSTAXIS * SRCLASTAXIS * sizeof(float);
    size_t maskSize = FIRSTAXIS * MASKLASTAXIS * sizeof(bool);
    size_t tilingFileSize = TILINGDATA_SIZE * sizeof(uint32_t);
    size_t workspaceSize = WORKSPACE_SIZE * sizeof(float);

    aclInit(nullptr);
    aclrtContext context;
    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtCreateContext(&context, deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    uint8_t *srcInputHost, *outputHost, *maskInputHost, *workspaceHost, *tilingHost;
    uint8_t *srcInputDevice, *outputDevice, *maskInputDevice, *workspaceDevice, *tilingDevice;

    aclrtMallocHost((void**)(&srcInputHost), srcSize);
    aclrtMallocHost((void**)(&maskInputHost), maskSize);
    aclrtMallocHost((void**)(&outputHost), srcSize);
    aclrtMallocHost((void**)(&workspaceHost), workspaceSize);
    aclrtMallocHost((void**)(&tilingHost), tilingFileSize);

    aclrtMalloc((void**)&srcInputDevice, srcSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void**)&maskInputDevice, maskSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void**)&outputDevice, srcSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void**)&workspaceDevice, workspaceSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void**)&tilingDevice, tilingFileSize, ACL_MEM_MALLOC_HUGE_FIRST);

    ReadFile("./input/srcinput.bin", srcSize, srcInputHost, srcSize);
    ReadFile("./input/maskinput.bin", maskSize, maskInputHost, maskSize);

    float scalarValue;
    aclrtMemcpy(tilingDevice, tilingFileSize, GenerateTiling(FIRSTAXIS, SRCLASTAXIS, MASKLASTAXIS), tilingFileSize,
                ACL_MEMCPY_HOST_TO_DEVICE);
    aclrtMemcpy(srcInputDevice, srcSize, srcInputHost, srcSize, ACL_MEMCPY_HOST_TO_DEVICE);
    aclrtMemcpy(maskInputDevice, maskSize, maskInputHost, maskSize, ACL_MEMCPY_HOST_TO_DEVICE);

    select_with_bytes_mask_custom<<<numBlocks, nullptr, stream>>>(srcInputDevice, maskInputDevice, outputDevice,
                                                                 workspaceDevice, tilingDevice);
    aclrtSynchronizeStream(stream);
    aclrtMemcpy(outputHost, srcSize, outputDevice, srcSize, ACL_MEMCPY_DEVICE_TO_HOST);

    WriteFile("./output/output.bin", outputHost, srcSize);

    bool goldenResult = CompareResult(outputHost, srcSize);
    if (goldenResult) {
        printf("test pass!\n");
    } else {
        printf("test failed!\n");
    }

    aclrtFree(srcInputDevice);
    aclrtFree(maskInputDevice);
    aclrtFree(outputDevice);
    aclrtFree(workspaceDevice);
    aclrtFree(tilingDevice);

    aclrtFreeHost(srcInputHost);
    aclrtFreeHost(maskInputHost);
    aclrtFreeHost(outputHost);
    aclrtFreeHost(workspaceHost);
    aclrtFreeHost(tilingHost);

    aclrtDestroyStream(stream);
    aclrtDestroyContext(context);
    aclrtResetDevice(deviceId);
    aclFinalize();
    return 0;
}

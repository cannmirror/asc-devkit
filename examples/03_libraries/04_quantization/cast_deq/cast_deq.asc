#include "acl/acl.h"
#include "data_utils.h"
#include "kernel_operator.h"

template <typename srcType, typename dstType>
class KernelCastDeq {
public:
    __aicore__ inline KernelCastDeq() {}
    __aicore__ inline void Init(GM_ADDR src_gm, GM_ADDR dst_gm, uint32_t inputSize, bool halfBlock, bool isVecDeq, AscendC::TPipe* pipeIn)
    {
        srcSize = inputSize;
        dstSize = inputSize * 2;
        this->halfBlock = halfBlock;
        this->isVecDeq = isVecDeq;
        pipe = pipeIn;
        src_global.SetGlobalBuffer(reinterpret_cast<__gm__ srcType*>(src_gm), srcSize);
        dst_global.SetGlobalBuffer(reinterpret_cast<__gm__ dstType*>(dst_gm), dstSize);
        pipe->InitBuffer(inQueueX, 1, srcSize * sizeof(srcType));
        pipe->InitBuffer(outQueue, 1, dstSize * sizeof(dstType));
        pipe->InitBuffer(tmpQueue, 1, 128);
    }
    __aicore__ inline void Process()
    {
        CopyIn();
        Compute();
        CopyOut();
    }

private:
    __aicore__ inline void CopyIn()
    {
        AscendC::LocalTensor<srcType> srcLocal = inQueueX.AllocTensor<srcType>();
        AscendC::DataCopy(srcLocal, src_global, srcSize);
        inQueueX.EnQue(srcLocal);
    }
    __aicore__ inline void Compute()
    {
        AscendC::LocalTensor<dstType> dstLocal = outQueue.AllocTensor<dstType>();
        AscendC::LocalTensor<uint64_t> tmpBuffer = tmpQueue.AllocTensor<uint64_t>();
        AscendC::Duplicate(tmpBuffer.ReinterpretCast<int32_t>(), static_cast<int32_t>(0), 32);
        AscendC::PipeBarrier<PIPE_V>();
        AscendC::Duplicate<int32_t>(dstLocal.template ReinterpretCast<int32_t>(), static_cast<int32_t>(0),
                                    dstSize / sizeof(int32_t));
        AscendC::PipeBarrier<PIPE_V>();
        bool signMode = false;
        if constexpr (AscendC::Std::is_same<dstType, int8_t>::value) {
            signMode = true;
        }
        AscendC::LocalTensor<srcType> srcLocal = inQueueX.DeQue<srcType>();
        if (halfBlock) {
            if (isVecDeq) {
                float vdeqScale[16] = { 0 };
                int16_t vdeqOffset[16] = { 0 };
                bool vdeqSignMode[16] = { 0 };
                for (int i = 0; i < 16; i++) {
                    vdeqScale[i] = 1.0;
                    vdeqOffset[i] = 0;
                    vdeqSignMode[i] = signMode;
                }
                AscendC::VdeqInfo vdeqInfo(vdeqScale, vdeqOffset, vdeqSignMode);
                AscendC::SetDeqScale(tmpBuffer, vdeqInfo);
                int32_t eventIDVToS = static_cast<int32_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::V_S));
                AscendC::SetFlag<AscendC::HardEvent::V_S>(eventIDVToS);
                AscendC::WaitFlag<AscendC::HardEvent::V_S>(eventIDVToS);
                AscendC::CastDeq<dstType, srcType, true, true>(dstLocal, srcLocal, srcSize);
            } else {
                float scale = 1.0;
                int16_t offset = 0;
                AscendC::SetDeqScale(scale, offset, signMode);
                AscendC::CastDeq<dstType, srcType, false, true>(dstLocal, srcLocal, srcSize);
            }
        } else {
            if (isVecDeq) {
                float vdeqScale[16] = { 0 };
                int16_t vdeqOffset[16] = { 0 };
                bool vdeqSignMode[16] = { 0 };
                for (int i = 0; i < 16; i++) {
                    vdeqScale[i] = 1.0;
                    vdeqOffset[i] = 0;
                    vdeqSignMode[i] = signMode;
                }
                AscendC::VdeqInfo vdeqInfo(vdeqScale, vdeqOffset, vdeqSignMode);
                AscendC::SetDeqScale(tmpBuffer, vdeqInfo);
                AscendC::PipeBarrier<PIPE_V>();
                int32_t eventIDVToS = static_cast<int32_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::V_S));
                AscendC::SetFlag<AscendC::HardEvent::V_S>(eventIDVToS);
                AscendC::WaitFlag<AscendC::HardEvent::V_S>(eventIDVToS);
                AscendC::CastDeq<dstType, srcType, true, false>(dstLocal, srcLocal, srcSize);
            } else {
                float scale = 1.0;
                int16_t offset = 0;
                AscendC::SetDeqScale(scale, offset, signMode);
                AscendC::CastDeq<dstType, srcType, false, false>(dstLocal, srcLocal, srcSize);
            }
        }
        outQueue.EnQue<dstType>(dstLocal);
        tmpQueue.FreeTensor(tmpBuffer);
        inQueueX.FreeTensor(srcLocal);
    }
    __aicore__ inline void CopyOut()
    {
        AscendC::LocalTensor<dstType> dstLocal = outQueue.DeQue<dstType>();
        AscendC::DataCopy(dst_global, dstLocal, dstSize);
        outQueue.FreeTensor(dstLocal);
    }

private:
    AscendC::GlobalTensor<srcType> src_global;
    AscendC::GlobalTensor<dstType> dst_global;
    AscendC::TPipe* pipe;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueueX;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> tmpQueue;
    AscendC::TQue<AscendC::TPosition::VECOUT, 1> outQueue;
    bool halfBlock = false;
    bool isVecDeq = false;
    uint32_t srcSize = 0;
    uint32_t dstSize = 0;
};

extern "C" __global__ __aicore__ void cast_deqs_custom(GM_ADDR src_gm, GM_ADDR dst_gm, uint32_t dataSize,
                                                       bool halfBlock, bool isVecDeq)
{
    KERNEL_TASK_TYPE_DEFAULT(KERNEL_TYPE_AIV_ONLY);

    AscendC::TPipe pipe;
    KernelCastDeq<int16_t, uint8_t> op;
    op.Init(src_gm, dst_gm, dataSize, halfBlock, isVecDeq, &pipe);
    op.Process();
}

int32_t main(int32_t argc, char* argv[])
{
    uint32_t numBlocks = 1;
    uint32_t dataSize = 256;
    bool halfBlock = false;
    bool isVecDeq = false;

    size_t dataFileSize = dataSize * sizeof(uint16_t);

    aclInit(nullptr);
    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    uint8_t* inputHost;
    uint8_t* inputDevice;
    aclrtMallocHost((void**)(&inputHost), dataFileSize);
    aclrtMalloc((void**)&inputDevice, dataFileSize, ACL_MEM_MALLOC_HUGE_FIRST);
    ReadFile("./input/input.bin", dataFileSize, inputHost, dataFileSize);
    aclrtMemcpy(inputDevice, dataFileSize, inputHost, dataFileSize, ACL_MEMCPY_HOST_TO_DEVICE);

    uint8_t* outputHost;
    uint8_t* outputDevice;
    aclrtMallocHost((void**)(&outputHost), dataFileSize);
    aclrtMalloc((void**)&outputDevice, dataFileSize, ACL_MEM_MALLOC_HUGE_FIRST);

    cast_deqs_custom<<<numBlocks, nullptr, stream>>>(inputDevice, outputDevice, dataSize, halfBlock, isVecDeq);
    aclrtSynchronizeStream(stream);

    aclrtMemcpy(outputHost, dataFileSize, outputDevice, dataFileSize, ACL_MEMCPY_DEVICE_TO_HOST);
    WriteFile("./output/output.bin", outputHost, dataFileSize);

    aclrtFree(inputDevice);
    aclrtFreeHost(inputHost);
    aclrtFree(outputDevice);
    aclrtFreeHost(outputHost);

    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();

    return 0;
}
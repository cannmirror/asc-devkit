#include <random>
#include <algorithm>
#include <cstring>
#include "acl/acl.h"
#include "kernel_operator.h"

template <typename T, bool isBitwiseMask, bool isMax, bool isCounter, bool isSetMask>
class KernelGetReduceRepeatMaxMinSpr {
public:
    __aicore__ inline KernelGetReduceRepeatMaxMinSpr() {}
    __aicore__ inline void Init(GM_ADDR srcGm, GM_ADDR dstGm, uint64_t mask0, uint64_t mask1, uint32_t repeat, uint32_t blockStride, uint32_t repeatStride,
                                AscendC::TPipe *pipeIn, uint32_t calCount)
    {
        pipe = pipeIn;
        bufferSize = calCount;

        this->repeat = repeat;
        this->blockStride = blockStride;
        this->repeatStride = repeatStride;
        this->mask0 = mask0;
        this->mask1 = mask1;

        srcGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ T *>(srcGm));
        dstGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ T *>(dstGm));

        pipe->InitBuffer(inQueue, 1, bufferSize * sizeof(T));
        pipe->InitBuffer(outQueue, 1, bufferSize * sizeof(T));

        if constexpr (isCounter) {
            AscendC::SetMaskCount();
        }
    }
    __aicore__ inline void Process()
    {
        CopyIn();
        if constexpr (!isSetMask && isBitwiseMask) {
            AscendC::SetVectorMask<T, AscendC::MaskMode::NORMAL>(mask1, mask0);
        }
        if constexpr (isMax) {
            if constexpr (isBitwiseMask) {
                ComputeMaxBit();
            } else {
                ComputeMaxCont();
            }
        } else {
            if constexpr (isBitwiseMask) {
                ComputeMinBit();
            } else {
                ComputeMinCont();
            }
        }
        CopyOut();
    }
private:
    __aicore__ inline void CopyIn()
    {
        AscendC::LocalTensor<T> srcLocal = inQueue.AllocTensor<T>();
        AscendC::DataCopy(srcLocal, srcGlobal, bufferSize);
        inQueue.EnQue(srcLocal);
    }
    __aicore__ inline void ComputeMaxBit()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.AllocTensor<T>();
        AscendC::LocalTensor<T> srcLocal = inQueue.DeQue<T>();

        T val = 0;
        T idx = 0;
        if constexpr (sizeof(T) == 2) {
            uint64_t masks[2] = {mask0, mask1};
            AscendC::WholeReduceMax<T, isSetMask>(dstLocal, srcLocal, masks, repeat, blockStride, blockStride, repeatStride);
        } else {
            uint64_t masks[1] = {mask0};
            AscendC::WholeReduceMax<T, isSetMask>(dstLocal, srcLocal, masks, repeat, blockStride, blockStride, repeatStride);
        }
        AscendC::PipeBarrier<PIPE_V>();
        AscendC::GetReduceRepeatMaxMinSpr<T>(val, idx);
        AscendC::PipeBarrier<PIPE_V>();

        T zero{0};
        AscendC::Duplicate(dstLocal, zero, bufferSize);
        AscendC::PipeBarrier<PIPE_V>();

        dstLocal.SetValue(0, val);
        dstLocal.SetValue(1, idx);

        outQueue.EnQue(dstLocal);
        inQueue.FreeTensor(srcLocal);
    }

    __aicore__ inline void ComputeMinBit()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.AllocTensor<T>();
        AscendC::LocalTensor<T> srcLocal = inQueue.DeQue<T>();

        T val = 0;
        T idx = 0;
        if constexpr (sizeof(T) == 2) {
            uint64_t masks[2] = {mask0, mask1};
            AscendC::WholeReduceMin<T, isSetMask>(dstLocal, srcLocal, masks, repeat, blockStride, blockStride, repeatStride);
        } else {
            uint64_t masks[1] = {mask0};
            AscendC::WholeReduceMin<T, isSetMask>(dstLocal, srcLocal, masks, repeat, blockStride, blockStride, repeatStride);
        }
        AscendC::PipeBarrier<PIPE_V>();
        AscendC::GetReduceRepeatMaxMinSpr<T>(val, idx);
        AscendC::PipeBarrier<PIPE_V>();

        T zero{0};
        AscendC::Duplicate(dstLocal, zero, bufferSize);
        AscendC::PipeBarrier<PIPE_V>();

        dstLocal.SetValue(0, val);
        dstLocal.SetValue(1, idx);

        outQueue.EnQue(dstLocal);
        inQueue.FreeTensor(srcLocal);
    }

    __aicore__ inline void ComputeMaxCont()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.AllocTensor<T>();
        AscendC::LocalTensor<T> srcLocal = inQueue.DeQue<T>();

        T val = 0;
        T idx = 0;
        AscendC::WholeReduceMax<T, isSetMask>(dstLocal, srcLocal, mask0, repeat, blockStride, blockStride, repeatStride);
        AscendC::PipeBarrier<PIPE_V>();
        AscendC::GetReduceRepeatMaxMinSpr<T>(val, idx);
        AscendC::PipeBarrier<PIPE_V>();

        T zero{0};
        AscendC::Duplicate(dstLocal, zero, bufferSize);
        AscendC::PipeBarrier<PIPE_V>();

        dstLocal.SetValue(0, val);
        dstLocal.SetValue(1, idx);

        outQueue.EnQue(dstLocal);
        inQueue.FreeTensor(srcLocal);
    }

    __aicore__ inline void ComputeMinCont()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.AllocTensor<T>();
        AscendC::LocalTensor<T> srcLocal = inQueue.DeQue<T>();

        T val = 0;
        T idx = 0;
        AscendC::WholeReduceMin<T, isSetMask>(dstLocal, srcLocal, mask0, repeat, blockStride, blockStride, repeatStride);
        AscendC::PipeBarrier<PIPE_V>();
        AscendC::GetReduceRepeatMaxMinSpr<T>(val, idx);
        AscendC::PipeBarrier<PIPE_V>();

        T zero{0};
        AscendC::Duplicate(dstLocal, zero, bufferSize);
        AscendC::PipeBarrier<PIPE_V>();

        dstLocal.SetValue(0, val);
        dstLocal.SetValue(1, idx);

        outQueue.EnQue(dstLocal);
        inQueue.FreeTensor(srcLocal);
    }
    __aicore__ inline void CopyOut()
    {
        int32_t eventID = static_cast<int32_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::S_MTE3));
        AscendC::SetFlag<AscendC::HardEvent::S_MTE3>(eventID);
        AscendC::WaitFlag<AscendC::HardEvent::S_MTE3>(eventID);
        AscendC::LocalTensor<T> dstLocal = outQueue.DeQue<T>();
        AscendC::DataCopy(dstGlobal, dstLocal, bufferSize);
        outQueue.FreeTensor(dstLocal);
    }

private:
    AscendC::GlobalTensor<T> srcGlobal;
    AscendC::GlobalTensor<T> dstGlobal;
    AscendC::TPipe* pipe;
    AscendC::TQue<AscendC::TPosition::VECIN, 1> inQueue;
    AscendC::TQue<AscendC::TPosition::VECOUT, 1> outQueue;
    uint32_t bufferSize = 256;
    uint32_t repeat = 2;
    uint32_t blockStride;
    uint32_t repeatStride;
    uint32_t mask0 = 128;
    uint32_t mask1 = 0;

};

extern "C" __global__ __aicore__ void kernel_get_reduce_repeat_max_min_spr(GM_ADDR srcGm, GM_ADDR dstGm)
{
    KERNEL_TASK_TYPE_DEFAULT(KERNEL_TYPE_AIV_ONLY);
    uint32_t calCount = 256;
    AscendC::TPipe pipe;
    KernelGetReduceRepeatMaxMinSpr<float, false, true, false, true> op;
    op.Init(srcGm, dstGm, 64, 0, 4, 1, 8, &pipe, calCount);
    op.Process();
}

struct GoldenData {
    std::vector<float> src;
    std::vector<float> golden;
};

GoldenData GenGoldenData(size_t srcSize, size_t goldenSize)
{
    std::random_device rd;
    std::mt19937 gen(rd());
    std::uniform_real_distribution<float> dis(-1000.0f, 1000.0f);
    std::vector<float> src(srcSize);
    for (int i = 0; i < src.size(); ++i) { 
        src[i] = dis(gen);
    }
    std::vector<float> golden(goldenSize, 0);
    auto it = std::max_element(src.begin(), src.end());
    uint32_t idx = std::distance(src.begin(), it);
    float idx_f = 0;
    std::memcpy(&idx_f, &idx, sizeof(idx));
    golden[0] = *it;
    golden[1] = idx_f;
    return {src, golden};
}

static bool CompareResult(const void* outputData, const void* goldenData, uint32_t outSize)
{
    size_t goldenSize = outSize;
    constexpr float EPS = 1e-4;
    int64_t wrongNum = 0;

    float val_a = (reinterpret_cast<const float*>(outputData))[0];
    float val_b = (reinterpret_cast<const float*>(goldenData))[0];
    float val_ae = std::abs(val_a - val_b);
    float val_re = val_ae / std::abs(val_b);
    if (val_ae > EPS && val_re > EPS) {
        printf("CompareResult failed output is %lf, golden is %lf\n", val_a, val_b);
        wrongNum++;
    }

    int32_t idx_a = (reinterpret_cast<const int32_t*>(outputData))[1];
    int32_t idx_b = (reinterpret_cast<const int32_t*>(goldenData))[1];
    float idx_ae = std::abs(idx_a - idx_b);
    float idx_re = idx_ae / std::abs(idx_b);
    if (idx_ae > EPS && idx_re > EPS) {
        printf("CompareResult failed output is %d, golden is %d\n", idx_a, idx_b);
        wrongNum++;
    }
    return wrongNum == 0;
}

int32_t main(int32_t argc, char* argv[]) 
{
    uint32_t numBlocks = 1;
    size_t inputByteSize = 256 * sizeof(float);
    size_t outputByteSize = inputByteSize;

    auto genData = GenGoldenData(256, 256);
    auto src = genData.src;
    auto golden = genData.golden;
    uint8_t* goldenHost = reinterpret_cast<uint8_t*>(golden.data());

    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    uint8_t *xHost = reinterpret_cast<uint8_t*>(src.data()), *zHost;
    uint8_t *xDevice, *zDevice;

    aclrtMallocHost((void **)(&zHost), outputByteSize);
    aclrtMalloc((void **)&xDevice, inputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);
    aclrtMalloc((void **)&zDevice, outputByteSize, ACL_MEM_MALLOC_HUGE_FIRST);

    aclrtMemcpy(xDevice, inputByteSize, xHost, inputByteSize,
                ACL_MEMCPY_HOST_TO_DEVICE);

    kernel_get_reduce_repeat_max_min_spr<<<numBlocks, nullptr, stream>>>(xDevice, zDevice);
    aclrtSynchronizeStream(stream);

    aclrtMemcpy(zHost, outputByteSize, zDevice, outputByteSize,
                ACL_MEMCPY_DEVICE_TO_HOST);
    
    bool testPassed = false;
    testPassed = CompareResult(zHost, goldenHost, outputByteSize);
    if(testPassed) {
        printf("test pass!\n");
    } else {
        printf("test failed!\n");
    }

    aclrtFree(xDevice);
    aclrtFree(zDevice);
    aclrtFreeHost(xHost);
    aclrtFreeHost(zHost);

    aclrtDestroyStream(stream);
    aclrtResetDevice(deviceId);
    aclFinalize();

    return 0;
}

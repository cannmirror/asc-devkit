#include "acl/acl.h"
#include "data_utils.h"
#include "kernel_operator.h"

enum ScalarType {
    BOTH_TENSOR = 1,
    TENSOR_SCALAR,
    SCALAR_TENSOR,
    BOTN_SCALAR
};

template <typename T>
class ClampByMinMax {
public:
    __aicore__ inline ClampByMinMax() {}

    __aicore__ inline void Init(GM_ADDR srcGm, GM_ADDR minGm, GM_ADDR maxGm, GM_ADDR dstGm, uint32_t countIn,
                                uint32_t dataSizeIn, uint32_t scalarTypeIn, AscendC::TPipe* pipeIn)
    {
        pipe = pipeIn;
        count = countIn;
        dataSize = dataSizeIn;
        scalarType = scalarTypeIn;
        srcGlobal.SetGlobalBuffer((__gm__ T*)srcGm);
        minGlobal.SetGlobalBuffer((__gm__ T*)minGm);
        maxGlobal.SetGlobalBuffer((__gm__ T*)maxGm);
        dstGlobal.SetGlobalBuffer((__gm__ T*)dstGm);

        pipe->InitBuffer(inQueueX, 1, dataSize * sizeof(T));
        pipe->InitBuffer(inQueueMin, 1, dataSize * sizeof(T));
        pipe->InitBuffer(inQueueMax, 1, dataSize * sizeof(T));
        pipe->InitBuffer(outQueue, 1, dataSize * sizeof(T));
    }
    __aicore__ inline void Process()
    {
        AscendC::AscendCUtils::SetOverflow(1);
        CopyIn();
        Compute();
        CopyOut();
        AscendC::AscendCUtils::SetOverflow(0);
    }
    __aicore__ inline void CopyIn()
    {
        AscendC::LocalTensor<T> srcLocal = inQueueX.AllocTensor<T>();
        AscendC::DataCopy(srcLocal, srcGlobal, dataSize);
        inQueueX.EnQue(srcLocal);

        AscendC::LocalTensor<T> minLocal = inQueueMin.AllocTensor<T>();
        AscendC::DataCopy(minLocal, minGlobal, dataSize);
        inQueueMin.EnQue(minLocal);

        AscendC::LocalTensor<T> maxLocal = inQueueMax.AllocTensor<T>();
        AscendC::DataCopy(maxLocal, maxGlobal, dataSize);
        inQueueMax.EnQue(maxLocal);
    }
    __aicore__ inline void Compute()
    {
        AscendC::LocalTensor<T> srcLocal = inQueueX.DeQue<T>();
        AscendC::LocalTensor<T> minLocal = inQueueMin.DeQue<T>();
        AscendC::LocalTensor<T> maxLocal = inQueueMax.DeQue<T>();
        AscendC::LocalTensor<T> dstLocal = outQueue.AllocTensor<T>();
        Duplicate(dstLocal, (T)0, dataSize);
        if (scalarType == ScalarType::BOTH_TENSOR) {
            AscendC::Clamp(dstLocal, srcLocal, minLocal, maxLocal, count);
        } else if (scalarType == ScalarType::TENSOR_SCALAR) {
            event_t eventIdMte2ToS = static_cast<event_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::MTE2_S));
            AscendC::SetFlag<AscendC::HardEvent::MTE2_S>(eventIdMte2ToS);
            AscendC::WaitFlag<AscendC::HardEvent::MTE2_S>(eventIdMte2ToS);
            T maxValue = maxLocal.GetValue(0);
            event_t eventIdSToV = static_cast<event_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::S_V));
            AscendC::SetFlag<AscendC::HardEvent::S_V>(eventIdSToV);
            AscendC::WaitFlag<AscendC::HardEvent::S_V>(eventIdSToV);
            AscendC::Clamp(dstLocal, srcLocal, minLocal, maxValue, count);
        } else if (scalarType == ScalarType::SCALAR_TENSOR) {
            event_t eventIdMte2ToS = static_cast<event_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::MTE2_S));
            AscendC::SetFlag<AscendC::HardEvent::MTE2_S>(eventIdMte2ToS);
            AscendC::WaitFlag<AscendC::HardEvent::MTE2_S>(eventIdMte2ToS);
            T minValue = minLocal.GetValue(0);
            event_t eventIdSToV = static_cast<event_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::S_V));
            AscendC::SetFlag<AscendC::HardEvent::S_V>(eventIdSToV);
            AscendC::WaitFlag<AscendC::HardEvent::S_V>(eventIdSToV);
            AscendC::Clamp(dstLocal, srcLocal, minValue, maxLocal, count);
        } else {
            event_t eventIdMte2ToS = static_cast<event_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::MTE2_S));
            AscendC::SetFlag<AscendC::HardEvent::MTE2_S>(eventIdMte2ToS);
            AscendC::WaitFlag<AscendC::HardEvent::MTE2_S>(eventIdMte2ToS);
            T minValue = minLocal.GetValue(0);
            T maxValue = maxLocal.GetValue(0);
            event_t eventIdSToV = static_cast<event_t>(GetTPipePtr()->FetchEventID(AscendC::HardEvent::S_V));
            AscendC::SetFlag<AscendC::HardEvent::S_V>(eventIdSToV);
            AscendC::WaitFlag<AscendC::HardEvent::S_V>(eventIdSToV);
            AscendC::Clamp(dstLocal, srcLocal, minValue, maxValue, count);
        }
        outQueue.EnQue(dstLocal);
        inQueueX.FreeTensor(srcLocal);
        inQueueMin.FreeTensor(minLocal);
        inQueueMax.FreeTensor(maxLocal);
    }
    __aicore__ inline void CopyOut()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.DeQue<T>();
        AscendC::DataCopy(dstGlobal, dstLocal, dataSize);
        outQueue.FreeTensor(dstLocal);
    }

private:
    AscendC::TPipe* pipe;
    AscendC::GlobalTensor<T> srcGlobal;
    AscendC::GlobalTensor<T> minGlobal;
    AscendC::GlobalTensor<T> maxGlobal;
    AscendC::GlobalTensor<T> dstGlobal;
    AscendC::TQue<AscendC::QuePosition::VECIN, 1> inQueueX;
    AscendC::TQue<AscendC::QuePosition::VECIN, 1> inQueueMin;
    AscendC::TQue<AscendC::QuePosition::VECIN, 1> inQueueMax;
    AscendC::TQue<AscendC::QuePosition::VECOUT, 1> outQueue;
    uint32_t count;
    uint32_t dataSize;
    uint32_t scalarType;
};

__global__ __vector__ void clamp_custom(GM_ADDR srcGm, GM_ADDR minGm, GM_ADDR maxGm, GM_ADDR dstGm)
{
    AscendC::TPipe pipe;
    constexpr uint32_t dataSize = 128;
    constexpr uint32_t count = 128;
    constexpr uint32_t scalarType = 4;
    ClampByMinMax<float> op;
    op.Init(srcGm, minGm, maxGm, dstGm, count, dataSize, scalarType, &pipe);
    op.Process();
}

static bool CompareResult(const void* outputData, uint32_t outSize)
{
    void* goldenData;
    aclrtMallocHost((void**)(&goldenData), outSize);
    size_t goldenSize = outSize;
    bool ret = ReadFile("./output/golden.bin", goldenSize, goldenData, goldenSize);
    if (ret) {
        printf("ReadFile golden.bin success!\n");
    } else {
        printf("test failed!\n");
        return false;
    }
    constexpr float EPS = 1e-4;
    const float epsilon = 1e-8f;
    int64_t wrongNum = 0;

    for (size_t i = 0; i < outSize / sizeof(float); i++) {
        float a = (reinterpret_cast<const float*>(outputData))[i];
        float b = (reinterpret_cast<const float*>(goldenData))[i];
        float ae = std::abs(a - b);
        float re = ae / (std::abs(b) + epsilon);
        if (ae > EPS && re > EPS) {
            printf("CompareResult golden.bin failed output is %lf, golden is %lf\n", a, b);
            wrongNum++;
        }
    }
    aclrtFreeHost(goldenData);
    if (wrongNum != 0) {
        return false;
    } else {
        printf("CompareResult golden.bin success!\n");
        return true;
    }
}


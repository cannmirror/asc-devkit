#include "acl/acl.h"
#include "data_utils.h"
#include "kernel_operator.h"

template <typename T>
class KernelBitwiseXor {
public:
    __aicore__ inline KernelBitwiseXor() = default;
    __aicore__ inline void Init(GM_ADDR dstGm, GM_ADDR src0Gm, GM_ADDR src1Gm, uint32_t totalLength, uint32_t count,
                                AscendC::TPipe* pipeIn)
    {
        pipe = pipeIn;
        src0Global.SetGlobalBuffer(reinterpret_cast<__gm__ T*>(src0Gm), totalLength);
        src1Global.SetGlobalBuffer(reinterpret_cast<__gm__ T*>(src1Gm), totalLength);
        dstGlobal.SetGlobalBuffer(reinterpret_cast<__gm__ T*>(dstGm), totalLength);
        pipe->InitBuffer(inQueueX, 1, totalLength * sizeof(T));
        pipe->InitBuffer(inQueueY, 1, totalLength * sizeof(T));
        pipe->InitBuffer(outQueue, 1, totalLength * sizeof(T));
        bufferSize = totalLength;
        this->count = count;
    }
    __aicore__ inline void Process()
    {
        CopyIn();
        Compute();
        CopyOut();
    }

    __aicore__ inline void CopyIn()
    {
        AscendC::LocalTensor<T> src0Local = inQueueX.AllocTensor<T>();
        AscendC::LocalTensor<T> src1Local = inQueueY.AllocTensor<T>();
        AscendC::DataCopy(src0Local, src0Global, bufferSize);
        AscendC::DataCopy(src1Local, src1Global, bufferSize);
        inQueueX.EnQue(src0Local);
        inQueueY.EnQue(src1Local);
    }
    __aicore__ inline void Compute()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.AllocTensor<T>();
        AscendC::LocalTensor<T> src0Local = inQueueX.DeQue<T>();
        AscendC::LocalTensor<T> src1Local = inQueueY.DeQue<T>();
        AscendC::Duplicate(dstLocal, (T)0, bufferSize);
        AscendC::BitwiseXor(dstLocal, src0Local, src1Local, count);
        outQueue.EnQue<T>(dstLocal);
        inQueueX.FreeTensor(src0Local);
        inQueueY.FreeTensor(src1Local);
    }
    __aicore__ inline void CopyOut()
    {
        AscendC::LocalTensor<T> dstLocal = outQueue.DeQue<T>();
        AscendC::DataCopy(dstGlobal, dstLocal, bufferSize);
        outQueue.FreeTensor(dstLocal);
    }

private:
    AscendC::TPipe* pipe;
    AscendC::TQue<AscendC::QuePosition::VECIN, 1> inQueueX;
    AscendC::TQue<AscendC::QuePosition::VECIN, 1> inQueueY;
    AscendC::TQue<AscendC::QuePosition::VECOUT, 1> outQueue;
    AscendC::GlobalTensor<T> src0Global;
    AscendC::GlobalTensor<T> src1Global;
    AscendC::GlobalTensor<T> dstGlobal;
    uint32_t bufferSize = 0;
    uint32_t count = 0;
};

__global__ __aicore__ void bitwisexor_custom(GM_ADDR dstGm, GM_ADDR src0Gm, GM_ADDR src1Gm)
{
    KERNEL_TASK_TYPE_DEFAULT(KERNEL_TYPE_AIV_ONLY);
    AscendC::TPipe pipe;
    constexpr uint32_t totalLength = 1024;
    constexpr uint32_t count = 1023;
    KernelBitwiseXor<int32_t> op;
    op.Init(dstGm, src0Gm, src1Gm, totalLength, count, &pipe);
    op.Process();
}

static bool CompareResult(const void* outputData, uint32_t outSize)
{
    void* goldenData;
    aclrtMallocHost((void**)(&goldenData), outSize);
    size_t goldenSize = outSize;
    bool ret = ReadFile("./output/golden.bin", goldenSize, goldenData, goldenSize);
    if (ret) {
        printf("ReadFile golden.bin success!\n");
    } else {
        printf("test failed!\n");
        return false;
    }
    constexpr float EPS = 1e-4;
    int64_t wrongNum = 0;

    for (size_t i = 0; i < outSize / sizeof(float); i++) {
        float a = (reinterpret_cast<const float*>(outputData))[i];
        float b = (reinterpret_cast<const float*>(goldenData))[i];
        float ae = std::abs(a - b);
        float re = ae / std::abs(b);
        if (ae > EPS && re > EPS) {
            printf("CompareResult golden.bin failed output is %lf, golden is %lf\n", a, b);
            wrongNum++;
        }
    }
    aclrtFreeHost(goldenData);
    if (wrongNum != 0) {
        return false;
    } else {
        printf("CompareResult golden.bin success!\n");
        return true;
    }
}


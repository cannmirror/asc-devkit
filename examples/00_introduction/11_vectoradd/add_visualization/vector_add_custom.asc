#include <cstdint>
#include <iostream>
#include <vector>
#include <algorithm>
#include <iterator>
#include "acl/acl.h"
#include "kernel_operator.h"
#include "data_utils.h"

constexpr uint32_t DB_NUMBER = 2;
constexpr uint32_t ONE_BLK_SIZE = 32;

class KernelAdd {
public:
    __aicore__ inline KernelAdd() {}

    __aicore__ inline void Init(GM_ADDR src0Gm, GM_ADDR src1Gm, GM_ADDR dstGm, uint32_t row, uint32_t column)
    {
        this->row = row;
        this->column = column;
        this->rowPerBlock = row / AscendC::GetBlockNum();
        this->blockLength = this->rowPerBlock * column;

        src0Global.SetGlobalBuffer((__gm__ half*)src0Gm + this->blockLength * AscendC::GetBlockIdx(),
                                   this->blockLength);
        src1Global.SetGlobalBuffer((__gm__ half*)src1Gm + this->blockLength * AscendC::GetBlockIdx(),
                                   this->blockLength);
        dstGlobal.SetGlobalBuffer((__gm__ half*)dstGm + this->blockLength * AscendC::GetBlockIdx(), this->blockLength);

        this->columnAlignedByte = AscendC::CeilDivision(sizeof(half) * column, ONE_BLK_SIZE) * ONE_BLK_SIZE;
        this->columnAligned = columnAlignedByte / sizeof(half);

        pipe.InitBuffer(inQueueSrc0, DB_NUMBER, columnAlignedByte * this->rowPerBlock / DB_NUMBER);
        pipe.InitBuffer(inQueueSrc1, DB_NUMBER, columnAlignedByte * this->rowPerBlock / DB_NUMBER);
        pipe.InitBuffer(outQueueDst, DB_NUMBER, columnAlignedByte * this->rowPerBlock / DB_NUMBER);
    }
    __aicore__ inline void Process()
    {
        uint32_t loopCount = DB_NUMBER;
        for (uint32_t i = 0; i < loopCount; i++) {
            CopyIn(i);
            Compute(i);
            CopyOut(i);
        }
    }

private:
    __aicore__ inline void CopyIn(uint32_t progress)
    {
        AscendC::LocalTensor<half> src0Local = inQueueSrc0.AllocTensor<half>();
        AscendC::LocalTensor<half> src1Local = inQueueSrc1.AllocTensor<half>();

        AscendC::DataCopyParams params;
        params.blockCount = this->rowPerBlock / DB_NUMBER;
        params.blockLen = this->column * sizeof(half);

        params.srcStride = 0;
        params.dstStride = 0;
        AscendC::DataCopyPadParams padParams;
        padParams.isPad = true;
        padParams.leftPadding = 0;
        padParams.rightPadding = this->columnAlignedByte / sizeof(half) - this->column;
        padParams.paddingValue = 0;

        AscendC::DataCopyPad<half>(src0Local, src0Global[progress * blockLength / DB_NUMBER], params, padParams);
        AscendC::DataCopyPad<half>(src1Local, src1Global[progress * blockLength / DB_NUMBER], params, padParams);

        inQueueSrc0.EnQue(src0Local);
        inQueueSrc1.EnQue(src1Local);
    }
    __aicore__ inline void Compute(uint32_t progress)
    {
        AscendC::LocalTensor<half> src0Local = inQueueSrc0.DeQue<half>();
        AscendC::LocalTensor<half> src1Local = inQueueSrc1.DeQue<half>();
        AscendC::LocalTensor<half> dstLocal = outQueueDst.AllocTensor<half>();
        half dupValue = 0;
        Duplicate(dstLocal, dupValue, rowPerBlock * columnAligned / DB_NUMBER);
        uint32_t loopCount = rowPerBlock / DB_NUMBER;
        uint32_t elePerRepeat = AscendC::DEFAULT_BLOCK_SIZE / sizeof(half);
        uint32_t alignedEleNum = column / elePerRepeat * elePerRepeat;

        for (uint32_t j = 0; j < loopCount; j++) {
            Add(dstLocal[j * columnAligned], src0Local[j * columnAligned], src1Local[j * columnAligned], alignedEleNum);
        }

        uint8_t blockStride = columnAlignedByte / ONE_BLK_SIZE;
        uint8_t repeatStride = blockStride * AscendC::DEFAULT_BLK_NUM;
        AscendC::SetMaskCount();
        AscendC::SetVectorMask<half, AscendC::MaskMode::COUNTER>(rowPerBlock * ONE_BLK_SIZE / sizeof(half) / DB_NUMBER);
        AscendC::Add<half, false>(dstLocal[alignedEleNum], src0Local[alignedEleNum], src1Local[alignedEleNum],
                                  AscendC::MASK_PLACEHOLDER, 1,
                                  {blockStride, blockStride, blockStride, repeatStride, repeatStride, repeatStride});

        outQueueDst.EnQue<half>(dstLocal);
        inQueueSrc0.FreeTensor(src0Local);
        inQueueSrc1.FreeTensor(src1Local);
    }
    __aicore__ inline void CopyOut(uint32_t progress)
    {
        AscendC::LocalTensor<half> dstLocal = outQueueDst.DeQue<half>();
        AscendC::DataCopyParams params;
        params.blockCount = this->rowPerBlock / DB_NUMBER;
        params.blockLen = this->column * sizeof(half);
        params.srcStride = 0;
        params.dstStride = 0;
        AscendC::DataCopyPad(dstGlobal[progress * blockLength / DB_NUMBER], dstLocal, params);
        outQueueDst.FreeTensor(dstLocal);
    }

private:
    AscendC::TPipe pipe;

    AscendC::TQue<AscendC::QuePosition::VECIN, 1> inQueueSrc0, inQueueSrc1;
    AscendC::TQue<AscendC::QuePosition::VECOUT, 1> outQueueDst;

    AscendC::GlobalTensor<half> src0Global, src1Global, dstGlobal;
    uint32_t row;
    uint32_t column;
    uint32_t rowPerBlock;
    uint32_t blockLength;
    uint32_t columnAlignedByte;
    uint32_t columnAligned;
};

__global__ __aicore__ void add_simple_kernel(GM_ADDR src0Gm, GM_ADDR src1Gm, GM_ADDR dstGm)
{
    KernelAdd op;
    op.Init(src0Gm, src1Gm, dstGm, 640, 270);
    op.Process();
}

int32_t main(int32_t argc, char* argv[])
{
    size_t param1FileSize = 172800 * sizeof(half);
    size_t param2FileSize = 172800 * sizeof(half);
    size_t param3FileSize = 172800 * sizeof(half);
    uint32_t blockDim = 8;

    aclInit(nullptr);
    aclrtContext context;
    int32_t deviceId = 0;
    aclrtSetDevice(deviceId);
    aclrtCreateContext(&context, deviceId);
    aclrtStream stream = nullptr;
    aclrtCreateStream(&stream);

    uint8_t* param1Host;
    uint8_t* param1Device;
    aclrtMallocHost((void**)(&param1Host), param1FileSize);
    aclrtMalloc((void**)&param1Device, param1FileSize, ACL_MEM_MALLOC_HUGE_FIRST);
    ReadFile("./input/input_x.bin", param1FileSize, param1Host, param1FileSize);
    aclrtMemcpy(param1Device, param1FileSize, param1Host, param1FileSize, ACL_MEMCPY_HOST_TO_DEVICE);

    uint8_t* param2Host;
    uint8_t* param2Device;
    aclrtMallocHost((void**)(&param2Host), param2FileSize);
    aclrtMalloc((void**)&param2Device, param2FileSize, ACL_MEM_MALLOC_HUGE_FIRST);
    ReadFile("./input/input_y.bin", param2FileSize, param2Host, param2FileSize);
    aclrtMemcpy(param2Device, param2FileSize, param2Host, param2FileSize, ACL_MEMCPY_HOST_TO_DEVICE);

    uint8_t* param3Host;
    uint8_t* param3Device;
    aclrtMallocHost((void**)(&param3Host), param3FileSize);
    aclrtMalloc((void**)&param3Device, param3FileSize, ACL_MEM_MALLOC_HUGE_FIRST);

    add_simple_kernel<<<blockDim, nullptr, stream>>>(param1Device, param2Device, param3Device);
    aclrtSynchronizeStream(stream);

    aclrtMemcpy(param3Host, param3FileSize, param3Device, param3FileSize, ACL_MEMCPY_DEVICE_TO_HOST);
    WriteFile("./output/output.bin", param3Host, param3FileSize);

    aclrtFree(param1Device);
    aclrtFree(param2Device);
    aclrtFree(param3Device);
    aclrtFreeHost(param1Host);
    aclrtFreeHost(param2Host);
    aclrtFreeHost(param3Host);

    aclrtDestroyStream(stream);
    aclrtDestroyContext(context);
    aclrtResetDevice(deviceId);
    aclFinalize();

    return 0;
}
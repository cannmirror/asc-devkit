real_path=$(realpath "$0")
LOCAL_PATH=$(cd $(dirname "$real_path"); pwd)
PKG_PATH=$(cd ${LOCAL_PATH}/../..; pwd)
PYTHON_P="/python/site-packages"
PYTHON_PATH="${PKG_PATH}${PYTHON_P}"
export PYTHONPATH="${PYTHON_PATH}:${PYTHONPATH}"
OPC_PATH="/asc_opc_tool"
python_args="${HI_PYTHON}"
if [ "x${python_args}" = "x" ]; then
  python_args="python3"
fi
cmd="${python_args} ${PYTHON_PATH}${OPC_PATH}/opc.py"
${cmd} "$@"
